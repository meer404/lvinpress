/* ============================================
   LVINPress - Tailwind Custom Overrides
   For animations, RTL, and features Tailwind CDN can't handle
   ============================================ */

/* ========== News Ticker Animation ========== */
@keyframes ticker-scroll {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
}
@keyframes ticker-scroll-rtl {
    0% { transform: translateX(0); }
    100% { transform: translateX(50%); }
}
.ticker-track {
    animation: ticker-scroll 30s linear infinite;
}
[dir="rtl"] .ticker-track {
    animation: ticker-scroll-rtl 30s linear infinite;
}

/* ========== Reading Progress Bar ========== */
.reading-progress {
    position: fixed;
    top: 0;
    left: 0;
    height: 3px;
    background: linear-gradient(90deg, #B80000, #d4af37);
    z-index: 9999;
    transition: width 0.1s linear;
}

/* ========== Scrollbar Styling ========== */
::-webkit-scrollbar { width: 8px; }
::-webkit-scrollbar-track { background: transparent; }
::-webkit-scrollbar-thumb { background: rgba(0,0,0,0.15); border-radius: 4px; }
::-webkit-scrollbar-thumb:hover { background: rgba(0,0,0,0.25); }
[data-theme="dark"] ::-webkit-scrollbar-thumb { background: rgba(255,255,255,0.1); }
[data-theme="dark"] ::-webkit-scrollbar-thumb:hover { background: rgba(255,255,255,0.2); }

/* ========== Theme Transitions ========== */
body, .header-glass, .sidebar-widget {
    transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease;
}

/* ========== Focus Mode ========== */
.focus-mode .header-main,
.focus-mode footer,
.focus-mode .sidebar-col,
.focus-mode .news-ticker,
.focus-mode .share-section,
.focus-mode .author-bio-section,
.focus-mode .comments-section,
.focus-mode .article-meta-bar,
.focus-mode .newsletter-section,
.focus-mode .breadcrumb-nav {
    display: none !important;
}
.focus-mode .content-grid {
    grid-template-columns: 1fr !important;
    max-width: 750px !important;
    margin: 0 auto !important;
}
.focus-mode .article-body {
    font-size: 1.15rem;
    line-height: 2;
}

/* ========== Animate on Scroll ========== */
.animate-in {
    opacity: 1 !important;
    transform: translateY(0) !important;
}

/* ========== Article Content Styling ========== */
.article-body h1, .article-body h2, .article-body h3, .article-body h4 {
    font-family: 'Playfair Display', Georgia, serif;
    margin-top: 2rem;
    margin-bottom: 1rem;
}
.article-body p { margin-bottom: 1.25rem; line-height: 1.8; }
.article-body img { border-radius: 12px; margin: 1.5rem 0; }
.article-body blockquote {
    border-left: 4px solid #d4af37;
    padding: 1rem 1.5rem;
    margin: 1.5rem 0;
    background: rgba(212, 175, 55, 0.05);
    border-radius: 0 8px 8px 0;
    font-style: italic;
}
[dir="rtl"] .article-body blockquote {
    border-left: none;
    border-right: 4px solid #d4af37;
    border-radius: 8px 0 0 8px;
}
.article-body ul, .article-body ol {
    padding-left: 1.5rem;
    margin-bottom: 1.25rem;
}
[dir="rtl"] .article-body ul, [dir="rtl"] .article-body ol {
    padding-left: 0;
    padding-right: 1.5rem;
}
.article-body a { color: #B80000; text-decoration: underline; }
.article-body a:hover { color: #d4af37; }
.article-body pre {
    background: #1a1a2e;
    color: #e2e8f0;
    padding: 1.25rem;
    border-radius: 12px;
    overflow-x: auto;
    margin: 1.5rem 0;
}
.article-body code {
    background: rgba(0,0,0,0.05);
    padding: 0.2em 0.4em;
    border-radius: 4px;
    font-size: 0.9em;
}
.article-body table {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5rem 0;
}
.article-body th, .article-body td {
    padding: 0.75rem 1rem;
    border: 1px solid rgba(0,0,0,0.08);
    text-align: left;
}
[dir="rtl"] .article-body th, [dir="rtl"] .article-body td { text-align: right; }
.article-body th { background: rgba(0,0,0,0.03); font-weight: 600; }

/* ========== Poll Bar Animation ========== */
.poll-bar-fill {
    transition: width 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
}

/* ========== Hamburger Animation ========== */
.hamburger span {
    transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

/* ========== Print Styles ========== */
@media print {
    .header-main, footer, .sidebar-col, .news-ticker, .share-section,
    .back-to-top-btn, .newsletter-section, nav { display: none !important; }
    body { background: white !important; color: black !important; }
    .article-body { max-width: 100% !important; font-size: 12pt; }
}

/* ========== Reduced Motion ========== */
@media (prefers-reduced-motion: reduce) {
    .animate-in, .ticker-track {
        animation: none !important;
        opacity: 1 !important;
        transform: none !important;
        transition: none !important;
    }
}

/* ========== Admin Sidebar Scrollbar ========== */
.admin-sidebar-nav::-webkit-scrollbar { width: 4px; }
.admin-sidebar-nav::-webkit-scrollbar-thumb { background: rgba(255,255,255,0.1); border-radius: 2px; }
